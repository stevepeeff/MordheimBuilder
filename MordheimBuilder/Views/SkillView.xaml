<UserControl x:Class="MordheimBuilder.Views.SkillView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MordheimBuilder.Views"
             mc:Ignorable="d"
            d:DesignHeight="450" d:DesignWidth="1000">
    <Grid>
        <StackPanel>
            <GroupBox Header="Allowed Skills">
                <DataGrid ItemsSource="{Binding AllowedSkills}"  AutoGenerateColumns="True" SelectionMode="Single">
                </DataGrid>
            </GroupBox>
            <GroupBox Header="Learned Skills">
                <DataGrid ItemsSource="{Binding Skills}" AutoGenerateColumns="True" SelectionMode="Single"></DataGrid>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>